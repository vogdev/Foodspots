<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <h2><%= @foodspot.name%>
      <% if user_signed_in? %>
      <%= render 'partials/like' , spot: @foodspot%>
      <%end%>
    </h2>
    <p class="pull-right">Kitchen: <%= @foodspot.category.name%></p>
    <p><%= @foodspot.address%></p>
  </div>

  <div class="col-sm-12 col-md-8 col-lg-8">
    <%= image_tag @foodspot.image.url(:original) %>
    <% unless @foodspot.votes_for.voters.empty? %>
      <p class="liked-show"> Liked by <sapn class="upvotes"><%= @foodspot.get_upvotes.size %></sapn> <%= "person".pluralize(@foodspot.get_upvotes.size)%></p>
      <% @foodspot.votes_for.voters.last(6).each do |p| %>
        <%= link_to p do %>
            <%if p.provider  == "facebook" %>
              <%= image_tag p.avatar_file_name + "?type=normal", class: "img-circle user-img-small",:"data-toggle" =>"tooltip", :"data-placement" => "top", :title => "#{p.username}"%>
            <%else%>
              <%= image_tag p.avatar.url(:thumb), class: "img-circle user-img-small",:"data-toggle" =>"tooltip", :"data-placement" => "top", :title => "#{p.username}" %>
            <%end%>
        <% end %>
      <%end%>
      <% if @foodspot.votes_for.voters.count > 3 %>
        <%= render 'partials/users_modal'%>
      <%end%>
    <%end%>
    <div class="fb-comments">
      <%= render 'partials/facebookComments'%>
    </div>
  </div>


  <div class="col-sm-12 col-md-4 col-lg-4">

    <%= render 'partials/map'%>
    <div class="info">
    <p class="lead">
    Phone: <%= @foodspot.phone%><br>
    Website: <%= @foodspot.website%></p>
    </div>
  </div>
<div class="col-sm-12 col-md-12 col-lg-12 text-center">

  <%unless @foodspot.nearbys(30).where(visible: true).any? == false%>
  <h3>Foodspots near <%= @foodspot.name %></h3>
  <% for foodspot in @foodspot.nearbys(30).where(visible: true).take(2)%>
  Name: <%= foodspot.name%>
  <%= link_to foodspot.address, foodspot %> <%= foodspot.distance.round(2)%> miles</br>
  <% end %>
  <%else%>
  <h3>There is no Foodspots near <%= @foodspot.name %></h3>
  <p>I know a FoodSpot near <%= @foodspot.name %> </p>
  <%end%>


<% if current_user.try(:admin?) %>
<%= link_to "Edit Foodspot", edit_foodspot_path(@foodspot)%>
<%= link_to  'Destroy', @foodspot, method: :delete, data: { confirm: 'Click Sure! to Delete this item' }%>
<% end %>
</div>




</div>
