<%= form_tag search_foodspots_path, method: :get do |f| %>
<%= text_field_tag :search, nil, placeholder: "hot dogs , burgers , etc."%>
<!-- <%= text_field_tag :address, nil, placeholder: "chicago , Morocco , etc."%> -->
<%= select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}) %>
<%= submit_tag 'Search' %>
<%end%>
<div class="row">
  <% @foodspots.each do |spot| %>
  <div class="margin-b col-sm-12 col-md-6 col-lg-4">
        <%= image_tag spot.image.url(:thumb), class: "foodspot-img" %>
        <%= link_to spot , data: { turbolinks: false }, class:"index-link" do %>
        <div class="caption">
          <div class="text-center">
            <h3 class="foodspot-name"><%= spot.name%></h3>
            <p><%= truncate(spot.address, length: 30)%></p>
          </div>
        </div>
        <% end %>
  </div>
  <% end %>
</div>



<% if current_user.try(:admin?) %>
  <%= link_to "add Foodspot", new_foodspot_path%>
<% end %>
